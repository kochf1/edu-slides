% internal command used by lObject
\newcommand{\internalObject}[5]{ 
    \begin{minipage}[#4][#2]{#1}%
        \ifthenelse{\equal{#3}{l}}{\raggedright}{}
        \ifthenelse{\equal{#3}{c}}{\centering}{}
        \ifthenelse{\equal{#3}{r}}{\raggedleft}{}
        #5
    \end{minipage}
}


%% @layout Container for any type of Object
%% params: box(x,y,dx,dy){1}, halign{2}, valign{3}, object{4}
\newcommand{\layoutObject}[4]{ 
    \edef\boxX{\pgfkeysvalueof{/block#1/x}}
    \edef\boxY{\pgfkeysvalueof{/block#1/y}}
    \edef\boxDX{\pgfkeysvalueof{/block#1/dx}}
    \edef\boxDY{\pgfkeysvalueof{/block#1/dy}}
    \edef\debug{\pgfkeysvalueof{/params/debug/layout}}

    \begin{textblock*}{\boxDX}(\boxX,\boxY)
        \begin{minipage}{\boxDX}
            \ifthenelse{\boolean{\debug}}{
                \setlength{\fboxsep}{0pt}
                \fbox{\internalObject{\boxDX}{\boxDY}{#2}{#3}{#4}}
            }{
                \internalObject{\boxDX}{\boxDY}{#2}{#3}{#4}
            }
        \end{minipage}
    \end{textblock*}
}

%% @layout Container for Text Box
%% params: anchor(x,y,dx,dy){1}, halign{2}, valign{3}, font{4}, text{5}
\newcommand{\layoutText}[5]{
    \edef\lFontSize{\pgfkeysvalueof{/font#4/size}}
    \edef\lFontSpace{\pgfkeysvalueof{/font#4/space}}
    \layoutObject{#1}{#2}{#3}{\fontsize{\lFontSize}{\lFontSpace} \selectfont #5}
}

%% @layout Container for Image Box
%% params: anchor(x,y,dx,dy){1}, halign{2}, valign{3}, keepaspect{4}, image{5}
\newcommand{\layoutImage}[5]{
    \edef\boxDX{\pgfkeysvalueof{/block#1/dx}}
    \edef\boxDY{\pgfkeysvalueof{/block#1/dy}}

    \IfFileExists{#5}{
        \ifthenelse{\boolean{#4}}{
            \def\graphicOption{\includegraphics[width=\boxDX,height=\boxDY,keepaspectratio]{#5}}
        }{
            \def\graphicOption{\includegraphics[width=\boxDX,height=\boxDY]{#5}}
        }
        \layoutObject{#1}{#2}{#3}{\graphicOption}
    }{
        \layoutObject{#1}{c}{c}{\textcolor{red}{\textbf{Not Found: \\ '#5'}}}%
    }
}

%% @layout Container for Colored Box
%% params: anchor(x,y,dx,dy){1}, color{2}
\newcommand{\layoutColor}[2]{
    \edef\boxX{\pgfkeysvalueof{/block#1/x}}
    \edef\boxY{\pgfkeysvalueof{/block#1/y}}
    \edef\boxDX{\pgfkeysvalueof{/block#1/dx}}
    \edef\boxDY{\pgfkeysvalueof{/block#1/dy}}
    \begin{textblock*}{\boxDX}(\boxX,\boxY)
        \begingroup 
            \color{#2} \rule{\boxDX}{\boxDY}
        \endgroup
    \end{textblock*}
    
}

