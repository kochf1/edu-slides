%% @template Cover
%% Open the presentation with a title
%% params: title{1}
\newcommand{\slideCover}[1]{ 
    \edef\course{\pgfkeysvalueof{/params/course}}
    \edef\courseCode{\pgfkeysvalueof{/params/course/code}}
    \edef\courseLogo{\pgfkeysvalueof{/params/course/logo}}
    \edef\author{\pgfkeysvalueof{/params/author}}
    \edef\email{\pgfkeysvalueof{/params/author/email}}
    \edef\link{\pgfkeysvalueof{/params/author/url}}

    \begin{frame}[plain]
        %% Logo
        \elementLogo

        %% Course Logo
        %% If Course Logo is EMPTY, then default to Color Box with \defaultcolor
        \ifthenelse{\equal{\courseLogo}{}}
           { \layoutColor{/page/half/right}{\defaultColor} }
           { \layoutImage{/page/half/right}{r}{c}{true}{\courseLogo} }

        %% Course Code & Course Name
        \ifthenelse{\equal{\courseCode}{}}{}
            {\ifthenelse{\equal{\course}{}}{}
            {\layoutText{/box/third/left/top}{l}{t}{/body}{\courseCode \\ \course}}}

        %% Lesson Title
        \layoutText{/box/third/left/middle}{l}{c}{/title}{#1}

        %% Author information
        \ifthenelse{\equal{\author}{}}{}
            {\layoutText{/box/third/left/bottom}{l}{b}{/body}{\textbf{\author} \\ \email \\ \link}}
        
        %% Compilation time
        \elementCompilationTime{l}

    \end{frame}
}

